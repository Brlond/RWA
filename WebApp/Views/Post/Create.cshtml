@model MVC.ViewModels.PostVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Back to List  </a>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreatorUsername" class="control-label"></label>
                <select asp-for="CreatorUsername" class ="form-control" asp-items="ViewBag.Users"></select>
            </div>
            <div class="form-group">
                <label asp-for="TopicId" class="control-label"></label>
                <select asp-for="TopicId" class ="form-control" asp-items="ViewBag.Topics"></select>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" name="action" value="Create" class="btn btn-primary" />
                <input type="submit" name="action" value="Create Another" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

