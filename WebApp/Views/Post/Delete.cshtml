@model MVC.ViewModels.PostVM
@{
    ViewData["Title"] = "Delete";
    var user = ViewContext.HttpContext.User;
    string username = user.Identity.Name;
    bool isadmin = false;
    if (user.IsInRole("Admin"))
    {
        isadmin = true;
    }
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Published_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Published_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TopicTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TopicTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatorUsername)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatorUsername)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @if (!isadmin)
        {
            <a class="btn btn-outline-primary" asp-controller="Post" asp-action="GetByUsersString" asp-route-username="@username">Back to List</a>
        }
        else
        {
            <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
        }
    </form>
</div>
