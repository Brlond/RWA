@model MVC.ViewModels.PostVM

@{
    ViewData["Title"] = "Details";
    var user = ViewContext.HttpContext.User;
    string username = user.Identity.Name;
    bool isadmin = false;
    if (user.IsInRole("Admin"))
    {
        isadmin = true;
    }
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Published_Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Published_Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TopicTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TopicTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatorUsername)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatorUsername)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    @if (!isadmin)
    {
        <a asp-area="" asp-controller="Post" asp-action="GetByUsersString" asp-route-username="@username">Back to List</a>
    }
    else
    {
        <a asp-action="Index">Back to List</a>
    }
</div>
